= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :subject
    %br/
    = f.text_area :subject, autofocus: true
  .field
    = f.label :body
    %br/
    = f.text_area :body
  %br/
  .field
    %h4
      Receiver    
    = f.text_field :receiver_id
  .actions
    = f.submit 'Save'
